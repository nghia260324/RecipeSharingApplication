<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/cus_edt_stroke_9d9"
            android:hint="Item name"
            android:paddingHorizontal="12dp"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:textColor="@color/black_333"
            android:textColorHint="@color/white_1C1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_quantity"
                android:layout_marginHorizontal="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/cus_edt_stroke_9d9"
                android:hint="Quantity"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:textColor="@color/black_333"
                android:textColorHint="@color/white_1C1"/>
            <Button
                android:id="@+id/btn_remove_item_ingredient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_delete_border"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
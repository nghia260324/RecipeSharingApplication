<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateRecipeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <LinearLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top|center">
                <include layout="@layout/layout_heading"/>
                <TextView
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:textSize="24sp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/btn_back"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="Create recipe"/>
                <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_thumbnail_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@color/white_1C1"
                        app:shapeAppearanceOverlay="@style/rounded_corner_12"/>
                    <LinearLayout
                        android:id="@+id/btn_play"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/cus_bgr_rounded_corner_16"
                        android:backgroundTint="@color/white_000">
                        <ImageView
                            android:layout_marginLeft="2dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_play"
                            android:backgroundTint="@color/red_E00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_choose_media"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/cus_bgr_rounded_corner_16">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_edit"
                            android:backgroundTint="@color/red_E00"/>
                    </LinearLayout>
                </RelativeLayout>
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/cus_edt_stroke_red"
                    android:hint="Enter recipe name."
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/be_vietnam_pro_regular"
                    android:textColor="@color/black_333"
                    android:textColorHint="@color/white_1C1"/>
                <LinearLayout
                    android:id="@+id/btn_serves"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/cus_bgr_rounded_corner_16"
                    android:backgroundTint="@color/white_1F1">
                    <LinearLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/cus_bgr_rounded_corner_10">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_profile"
                            android:backgroundTint="@color/red_E00"/>

                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serves"
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:textColor="@color/black_333"
                        android:textSize="16sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_serves"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:fontFamily="@font/be_vietnam_pro_regular"
                        android:textColor="@color/white_1C1"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_arrow_right"
                        android:backgroundTint="@color/black_333"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cook_time"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/cus_bgr_rounded_corner_16"
                    android:backgroundTint="@color/white_1F1">
                    <LinearLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/cus_bgr_rounded_corner_10">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_clock"
                            android:backgroundTint="@color/red_E00"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cook time"
                        android:fontFamily="@font/be_vietnam_pro_semibold"
                        android:textColor="@color/black_333"
                        android:textSize="16sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_cook_time"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 min"
                        android:fontFamily="@font/be_vietnam_pro_regular"
                        android:textColor="@color/white_1C1"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_marginLeft="12dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_arrow_right"
                        android:backgroundTint="@color/black_333"/>
                </LinearLayout>
                <TextView
                    android:layout_marginVertical="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:textColor="@color/black_333"
                    android:textSize="20sp"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_ingredient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.core.widget.NestedScrollView>
                <Button
                    android:id="@+id/btn_add_ingredient"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:drawableTint="@color/black_333"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:background="@color/transparent"
                    android:drawableStart="@drawable/ic_add"
                    android:textAllCaps="false"
                    android:text="Add new Ingredient"/>
                <TextView
                    android:layout_marginVertical="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:textColor="@color/black_333"
                    android:textSize="20sp"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.core.widget.NestedScrollView>
                <Button
                    android:id="@+id/btn_add_instruction"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:drawableTint="@color/black_333"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:background="@color/transparent"
                    android:drawableStart="@drawable/ic_add"
                    android:textAllCaps="false"
                    android:text="Add new Instruction"/>
                <Button
                    android:id="@+id/btn_create_recipes"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:textColor="@color/white_000"
                    android:textSize="16sp"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/cus_bgr_rounded_corner_16"
                    android:backgroundTint="@color/red_E00"
                    android:textAllCaps="false"
                    android:text="Save my recipes"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/cus_edt_stroke_9d9"
            android:text="1"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:textColor="@color/black_333"/>
        <LinearLayout
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_edt_stroke_9d9"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edt_content"
                android:layout_marginBottom="12dp"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="Item content"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:textColor="@color/black_333"
                android:textColorHint="@color/white_1C1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/layout_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
                <Button
                    android:id="@+id/btn_add_media"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add_image"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_remove_item_instruction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_delete_border"/>
    </LinearLayout>
</RelativeLayout>